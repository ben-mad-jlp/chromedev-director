{
  "name": "chromedev-director",
  "version": "1.0.0",
  "description": "MCP server for autonomous browser testing with Chrome DevTools Protocol",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "chromedev-director": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsx src/server.ts",
    "test": "vitest",
    "test:ci": "vitest run --coverage"
  },
  "keywords": [
    "mcp",
    "chrome",
    "devtools",
    "testing",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "chrome-remote-interface": "^0.33.0",
    "zod": "^3.0.0",
    "hono": "^4.0.0",
    "@hono/node-server": "^1.0.0",
    "@hono/node-ws": "^1.0.0",
    "ws": "^8.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0",
    "tsx": "^4.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
